{
    "name": "smartassert/invokable-exception-logger",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/smartassert/invokable-exception-logger",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "static-analysis": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit --colors=always",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "autoload": {
        "psr-4": {
            "SmartAssert\\InvokableLogger\\": "src/",
            "SmartAssert\\Tests\\InvokableLogger\\": "tests/"
        }
    },
    "require": {
        "php": ">=8",
        "psr/log": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.2",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "minimum-stability":"stable",
    "prefer-stable":true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
